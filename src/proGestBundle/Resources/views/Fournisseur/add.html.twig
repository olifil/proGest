{% extends "::layout.html.twig" %}

{% block title %}{{ parent() }} - Ajouter un fournisseur{% endblock %}

{% block titre %}Ajouter un fournisseur{% endblock %}

{% block fil_ariane %}
    {{ parent() }}
    <li><a href="{{ path('fournisseurs')}}">Fournisseurs</a></li>
    <li class="active">Ajout d'un fournisseur</li>
{% endblock %}

{% block toolbar %}
  <li>
    <div class="btn-group-vertical">
      <button id="btnFournisseurSave" type="button" class="btn btn-default" title="Enregistrer les modifications">
        <span class="fa fa-save"></span>
      </button>
      <button id="btnUndo" type="button" class="btn btn-default" title="Annuler">
        <span class="fa fa-times"></span>
      </button>
    </div>
  </li>
{% endblock %}

{% block content %}

        <form action="{{ path('fournisseur-add') }}" method="post" {{ form_enctype(form) }} class="form-horizontal">
            {{ form_errors(form) }}
            <div class="form-group">
                {{ form_label(form.nom, "Nom", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                {{ form_errors(form.nom) }}
                <div class="col-sm-6">
                    {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.prenom, "Prénom", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                {{ form_errors(form.prenom) }}
                <div class="col-sm-6">
                    {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.raisonsociale, "Raison Sociale", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                {{ form_errors(form.raisonsociale) }}
                <div class="col-sm-6">
                    {{ form_widget(form.raisonsociale, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.adresse, "Adresse", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                {{ form_errors(form.adresse) }}
                <div class="col-sm-6">
                    {{ form_widget(form.adresse, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.cp, "Code Postal", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                {{ form_errors(form.cp) }}
                <div class="col-sm-2">
                    {{ form_widget(form.cp, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.ville, "Ville", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                {{ form_errors(form.ville) }}
                <div class="col-sm-4">
                    {{ form_widget(form.ville, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.contact, "Contact", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                {{ form_errors(form.contact) }}
                <div class="col-sm-6">
                    {{ form_widget(form.contact, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.tel, "Téléphone", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                {{ form_errors(form.tel) }}
                <div class="col-sm-4">
                    {{ form_widget(form.tel, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.mob, "Mobile", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                {{ form_errors(form.mob) }}
                <div class="col-sm-4">
                    {{ form_widget(form.mob, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.email, "Email", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                {{ form_errors(form.email) }}
                <div class="col-sm-6">
                    {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            {{ form_rest(form) }}
        </form>

{% endblock %}
